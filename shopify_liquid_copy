<script src="https://www.google.com/recaptcha/api.js?onload=onLoadRecaptcha&render=explicit" async defer></script>

<script>
const API_SUMMARY = "https://answers-rust.vercel.app/api/spiritual-report";
const API_PDF = "https://answers-rust.vercel.app/api/detailed-report";

let recaptchaId = null;

function onLoadRecaptcha() {
  recaptchaId = grecaptcha.render("recaptcha-box", {
    sitekey: "{{ settings.recaptcha_site_key }}",
    size: "normal"
  });
}

const personalBox = document.getElementById("isPersonal");
const personalFields = document.getElementById("personal-fields");

personalBox.addEventListener("change", () => {
  personalFields.style.display = personalBox.checked ? "block" : "none";
});

const progressInner = document.getElementById("progress-inner");
function animateProgress() {
  progressInner.style.width = "0%";
  setTimeout(() => progressInner.style.width = "40%", 200);
  setTimeout(() => progressInner.style.width = "70%", 700);
  setTimeout(() => progressInner.style.width = "100%", 1400);
}

document.getElementById("main-form").addEventListener("submit", async (e) => {
  e.preventDefault();

  const token = grecaptcha.getResponse(recaptchaId);
  if (!token) return alert("Please complete reCAPTCHA.");

  animateProgress();

  const fd = new FormData();
  fd.append("question", document.getElementById("question").value);
  fd.append("isPersonal", personalBox.checked ? "true" : "false");
  fd.append("recaptchaToken", token);

  if (personalBox.checked) {
    fd.append("email", document.getElementById("email").value);
    fd.append("fullName", document.getElementById("fullName").value);
    fd.append("birthDate", document.getElementById("birthDate").value);
    fd.append("birthTime", document.getElementById("birthTime").value);
    fd.append("birthPlace",
      [document.getElementById("birthCity").value,
       document.getElementById("birthState").value,
       document.getElementById("birthCountry").value].join(", ")
    );

    const palm = document.querySelector('input[name="palmImage"]').files[0];
    if (palm) fd.append("palmImage", palm);
  }

  const raw = await fetch(API_SUMMARY, { method:"POST", body:fd });
  const json = await raw.json();

  document.getElementById("summary-text").textContent = json.shortAnswer || "(no answer returned)";
  document.getElementById("summary").style.display = "block";

  if (json.pdfEmailed) {
    document.getElementById("pdf-btn").style.display = "none";
  } else {
    document.getElementById("pdf-btn").style.display = "block";
  }

  grecaptcha.reset(recaptchaId);
});

// modal logic
const modal = document.getElementById("modal-bg");
document.getElementById("pdf-btn").addEventListener("click", () => {
  const email = document.getElementById("email").value.trim();
  if (personalBox.checked && email) {
    alert("Your full personal report has already been emailed.");
    return;
  }
  modal.style.display = "flex";
});
document.getElementById("modal-cancel").addEventListener("click", () => modal.style.display = "none");
document.getElementById("modal-send").addEventListener("click", async () => {
  const email = document.getElementById("modal-email").value.trim();
  if (!email) return alert("Enter an email.");

  modal.style.display = "none";

  const body = JSON.stringify({
    email,
    question: document.getElementById("question").value
  });

  const raw = await fetch(API_PDF, {
    method:"POST",
    headers:{ "Content-Type":"application/json" },
    body
  });

  const json = await raw.json();
  if (!json.ok) alert("Email failed: " + json.error);
  else alert("Detailed report emailed!");
});
</script>

</body>
</html>
