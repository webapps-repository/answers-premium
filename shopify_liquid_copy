<script src="https://www.google.com/recaptcha/api.js?onload=onLoadRecaptcha&render=explicit" async defer></script>
<script>
/* ========================= CONFIG ========================= */
const API_SUMMARY = "https://answers-rust.vercel.app/api/spiritual-report";
const API_PDF     = "https://answers-rust.vercel.app/api/detailed-report";

let recaptchaWidgetId = null;

/* ========================= RECAPTCHA ========================= */
function onLoadRecaptcha() {
  recaptchaWidgetId = grecaptcha.render("recaptcha-box", {
    sitekey: "6LdAOgYsAAAAAFgNlxLkahtIAbZc4XcIJt2hfLsj",
    size: "normal"
  });
}

/* ========================= DOM REFERENCES ========================= */
const personalCheckbox = document.getElementById("isPersonal");
const personalFields   = document.getElementById("personal-fields");

const summaryContainer = document.getElementById("summary-container");
const answerSummary    = document.getElementById("answer-summary");
const detailedBtn      = document.getElementById("detailed-btn");

const spinner          = document.getElementById("spinner");

const modalBackdrop    = document.getElementById("email-modal-backdrop");
const modalEmail       = document.getElementById("modal-email");
const modalSend        = document.getElementById("modal-send");
const modalCancel      = document.getElementById("modal-cancel");

/* ============================================================
   PERSONAL TOGGLE — show/hide fields
============================================================ */
personalCheckbox.addEventListener("change", () => {
  personalFields.style.display = personalCheckbox.checked ? "block" : "none";
});

/* ============================================================
   FORM SUBMIT → GET SHORT ANSWER
============================================================ */
document.getElementById("spiritual-form").addEventListener("submit", async (e) => {
  e.preventDefault();

  const token = grecaptcha.getResponse(recaptchaWidgetId);
  if (!token) return alert("Please complete the reCAPTCHA.");

  spinner.style.display = "block";

  const fd = new FormData(e.target);
  fd.append("recaptchaToken", token);

  // Build birthPlace into one string
  const birthPlace = [
    document.getElementById("birthCity").value.trim(),
    document.getElementById("birthState").value.trim(),
    document.getElementById("birthCountry").value.trim()
  ].filter(Boolean).join(", ");

  if (birthPlace) fd.append("birthPlace", birthPlace);

  let result;
  try {
    const raw = await fetch(API_SUMMARY, { method: "POST", body: fd });
    result = await raw.json();
  } catch (err) {
    spinner.style.display = "none";
    return alert("Server error: " + err.message);
  }

  spinner.style.display = "none";

  /* Short answer */
  answerSummary.textContent = result.shortAnswer || "No answer.";

  /* Show container */
  summaryContainer.style.display = "block";

  /* If personal → PDF already emailed */
  if (result.pdfEmailed === true) {
    detailedBtn.style.display = "none";
  } else {
    detailedBtn.style.display = "block";
  }

  grecaptcha.reset(recaptchaWidgetId);
});

/* ============================================================
   FULL PDF REQUEST BUTTON
============================================================ */
detailedBtn.addEventListener("click", () => {
  const personalMode = personalCheckbox.checked;
  const existingEmail = document.getElementById("email").value.trim();

  if (personalMode) {
    return alert("Your full personal report has already been emailed to the email you provided.");
  }

  if (!existingEmail) {
    modalBackdrop.style.display = "flex"; // ask for email
  } else {
    requestPdf(existingEmail);
  }
});

/* ============================================================
   POPUP: SEND PDF
============================================================ */
modalCancel.addEventListener("click", () => {
  modalBackdrop.style.display = "none";
});

modalSend.addEventListener("click", () => {
  const email = modalEmail.value.trim();
  if (!email) return alert("Please enter an email.");
  modalBackdrop.style.display = "none";
  requestPdf(email);
});

/* ============================================================
   FUNCTION: SEND TECHNICAL PDF REQUEST
============================================================ */
async function requestPdf(email) {
  const question = document.getElementById("question").value.trim();

  try {
    const raw = await fetch(API_PDF, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ email, question })
    });

    const result = await raw.json();

    if (!result.ok) {
      return alert("Failed to send report: " + (result.error || "Unknown error"));
    }

    alert("Your detailed report has been emailed!");

  } catch (err) {
    alert("Server error: " + err.message);
  }
}
</script>

</body>
</html>
