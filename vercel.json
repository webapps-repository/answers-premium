{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1.js"
    }
  ],
  "env": {
    "PLAYWRIGHT_BROWSERS_PATH": "0",
    "PUPPETEER_SKIP_DOWNLOAD": "true",
    "CHROMIUM_PATH": "/var/task/node_modules/@sparticuz/chromium/bin"
  }
}
