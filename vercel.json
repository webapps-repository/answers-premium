{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1.js"
    }
  ],
  "env": {
    "AWS_LAMBDA_FUNCTION_MEMORY_SIZE": "1024",
    "CHROMIUM_EXECUTABLE_PATH": "/var/task/node_modules/@sparticuz/chromium/bin/chromium"
  }
}
